<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sonymobile.smallapp.actiondelegatordemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />

    <uses-permission android:name="com.sony.smallapp.permission.SMALLAPP" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:label="@string/app_name_activity" >
        <uses-library android:name="com.sony.smallapp.framework" />

        <service
            android:name="SmallBrowserApplication"
            android:label="@string/app_name_small_browser"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.sony.smallapp.intent.action.MAIN" />
                <category android:name="com.sony.smallapp.intent.category.LAUNCHER" />
            </intent-filter>
        </service>

        <activity
            android:name="MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ActionDelegatorActivity"
            android:label="@string/app_name_small_browser"
            android:excludeFromRecents="true"
            android:theme="@android:style/Theme.Translucent" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" />
            </intent-filter>
        </activity>
    </application>

</manifest>

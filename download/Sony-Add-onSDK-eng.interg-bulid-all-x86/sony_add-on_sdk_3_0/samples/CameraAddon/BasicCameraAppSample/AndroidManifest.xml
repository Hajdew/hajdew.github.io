<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sonymobile.android.camera.addon.basiccameraapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA"/>

    <!-- If you forget to add this CAMERA_ADDON permission, a SecurityException occurs. -->
    <uses-permission android:name="com.sonymobile.permission.CAMERA_ADDON"/>

    <uses-feature android:name="android.hardware.camera"/>

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17"/>

    <application
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault.NoActionBar.Fullscreen">
        <!--
        android:required="false"|"true" is an implementation choice.
        Put "true" if you only want the APK to be installed on Xperia devices
        containing the library; "false" otherwise.
        -->
        <uses-library android:name="com.sonymobile.camera.addon.api" android:required="false"/>
        <activity
            android:name=".BasicCameraApp"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:launchMode="singleTask">
            <!--
            android:launchMode="singleTask" has to be declared or else the following case is likely to happen:
            When the user
            1. Launches mode "a" of package "A",
            2. Switches to mode "b" of package "B",
            3. switches to mode "c" of package "C",
            4...
            then the user has to press the Back key repeatedly in order to return to the starting point.
            -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!--
            Set this intent-filter and meta-data so that Camera Add-on Framework can collect values from
            sample_mode_attributes.xml.
            -->
            <intent-filter>
                <action android:name="com.sonymobile.camera.addon.action.REGISTER_MODE" />
            </intent-filter>
            <meta-data android:name="com.sonymobile.camera.addon.MODE_ATTRIBUTES"
                android:resource="@xml/sample_mode_attributes" />
        </activity>

    </application>

</manifest>